<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_book"
        />
        <TextView
                android:id="@+id/textViewBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageViewIcon"
                android:lines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:text="@string/hint_name"
        />

        <TextView
                android:id="@+id/textViewWritter"
                android:layout_width="92dp"
                android:layout_height="76dp"
                android:layout_below="@+id/textViewBookName"
                android:layout_toEndOf="@+id/imageViewIcon"
                android:drawableStart="@drawable/ic_pen"
                android:gravity="center_vertical"
                android:lines="1"
                tools:text="@string/hint_writter"
        />

        <TextView
                android:id="@+id/textViewGenre"
                android:layout_width="92dp"
                android:layout_height="76dp"
                android:layout_below="@+id/textViewWritter"
                android:layout_toEndOf="@+id/imageViewIcon"
                android:drawableStart="@drawable/ic_pen"
                android:gravity="center_vertical"
                android:lines="1"
                tools:text="@string/hint_genre"
        />

    </RelativeLayout>
</android.support.v7.widget.CardView>